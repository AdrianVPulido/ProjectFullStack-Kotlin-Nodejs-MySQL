<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>ID</td>
            <td>Mesa</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= data[i].idmesa %></td>
                <td><%= data[i].nombre %></td>
                <td>
                  <a href="/pagina/mesas/<%= data[i].idmesa %>" class="btn btn-info">Edit</a>
                  <a href="/pagina/mesa/delete/<%= data[i].idmesa %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">

        <form action="/pagina/mesas" method="POST">
          <div class="form-group">
            <input type="text" name="nombre" placeholder="Nombre" class="form-control" autofocus>
          </div>
          <button type="submit" class="btn btn-primary">
            Crear Mesa
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
